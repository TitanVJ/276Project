<!doctype html>
<html lang="en" dir="ltr">
<head>

    <% include ../partials/headers.ejs %>
    <link href="./css/dashboard.css" rel="stylesheet" />

</head>
<body class="">
    <div class="page">
        <div class="page-single">
            <div class="container">
                <div class="row">
                    <div class="col col-login mx-auto">
                        <form class="card" action="/login" method="post">
                            <div class="card-body p-6">
                                <div class="card-title">Login to your account</div>
                                <div class="form-group">
                                    <label class="form-label">Username</label>
                                    <input name='username' type="text" class="form-control" id="usernameInput" aria-describedby="usernamelHelp" placeholder="Enter username">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">
                                        Password
                                    </label>
                                    <input name='password' type="password" class="form-control" id="passwordInput" placeholder="Password">
                                </div>

                                <% if ( locals.expressFlash ) { %>
                                    <p style="color: red"><strong>ERROR!</strong> <%= expressFlash %></p>
                                <% } %>

                                <div class="form-footer">
                                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                                </div>
                            </div>
                        </form>
                        <div class="text-center text-muted">
                            Don't have an account yet? <a href="./register">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>