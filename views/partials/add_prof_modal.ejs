<div class="modal fade" id="new_prof" tabindex="-1" role="dialog" aria-labelledby="modal_centre_title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_title">New Professor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/add_prof" method="post" id="new_prof_form" autocomplete="off">

                    <div clas="row">
                        <div class="form-group col">
                            <label for="year" class="col-form-label"> Course Year </label>
                            <select name="year" id="year" data-live-search="true" class="form-control selector" data-none-selected-text="⠀" title="⠀">

                            </select>
                        </div>

                        <div class="form-group col">
                            <label for="term" class="col-form-label"> Course Term </label>
                            <select name="term" id="term" data-live-search="true" class="form-control selector" readonly="true" data-none-selected-text="⠀" title="⠀">

                            </select>
                        </div>

                        <div class="form-group col">
                            <label for="dept" class="col-form-label"> Course Deparment </label>
                            <select name="dept" id="dept" data-live-search="true" class="form-control selector" readonly="true" data-none-selected-text="⠀" title="⠀">

                            </select>
                        </div>

                        <div class="form-group col">
                            <label for="course_num" class="col-form-label"> Course Number </label>
                            <select name="course_num" id="course_num" data-live-search="true" class="form-control selector" readonly="true" data-none-selected-text="⠀" title="⠀">

                            </select>
                        </div>

                        <div class="form-group col">
                            <label for="course_sec" class="col-form-label"> Course Section </label>
                            <select name="course_sec" id="course_sec" data-live-search="true" class="form-control selector" readonly="true" data-none-selected-text="⠀" title="⠀">

                            </select>
                        </div>
                    </div>
                </form>

                <br>

                <div class="container">
                    <div class="row">
                        <div class="col text-center" id="profPicture">

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer center-block justify-content-center" id="modalFoot">

            </div>
        </div>
    </div>
</div>